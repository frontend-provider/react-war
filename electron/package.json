{
  "name": "arcomage-hd-desktop",
  "version": "1.0.0",
  "description": "Web-based open source HD clone of 3DO and NWC's 2000 card game Arcomage",
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/arcomage/arcomage-hd"
  },
  "scripts": {
    "start": "electron ./main.js",
    "dist": "rimraf dist && electron-builder build --win --publish never",
    "deploy": "rimraf dist && electron-builder build --win --publish always"
  },
  "keywords": [
    "arcomage",
    "card",
    "game",
    "might and magic",
    "3do",
    "nwc",
    "rpg",
    "minigame",
    "clone",
    "hd",
    "remake",
    "remaster",
    "react game"
  ],
  "author": "Tom Chen <tomchen.org@gmail.com>",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "electron": "^12.0.2",
    "electron-builder": "^22.10.5",
    "rimraf": "^3.0.2"
  },
  "build": {
    "productName": "Arcomage HD",
    "appId": "com.tomchen.arcomagehd",
    "win": {
      "target": "nsis",
      "icon": "favicon.png"
    },
    "mac": {
      "category": "public.app-category.games"
    }
  }
}
